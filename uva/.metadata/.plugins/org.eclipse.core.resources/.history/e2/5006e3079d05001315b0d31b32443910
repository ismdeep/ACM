
public class Main
{
	public class Problem
	{
		public int cal_count (int value)
		{
			int count = 0;
			while (value != 1)
			{
				if (0 == value % 2)
				{
					value = value / 2;
				}
				else
				{
					value = value * 3 + 1;
				}
				count++;
			}
			return count;
		}
	}
	
	public static void main(String[] args)
	{
		// TODO Auto-generated method stub
		
	}

}
