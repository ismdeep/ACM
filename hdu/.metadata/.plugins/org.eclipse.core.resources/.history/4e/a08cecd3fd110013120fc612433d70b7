

public class Main {

	public static int next_index (int index, int n)
	{
		int indexTmp;
		if (index > n)
		{
			indexTmp = (index * 2) - 2 * n - 1;
		}
		else
		{
			indexTmp = (index * 2 - 1) - n;
		}
		return indexTmp;
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub\
	}

}
